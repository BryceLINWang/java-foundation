import java.util.Scanner;

public class Main {
public static void main(String[] args) {
  Scanner r=new Scanner(System.in);
 while (r.hasNext()) {
		 String s=r.next();
		 // int length=r.nextInt();
		  int len=1;
			int len2=1;
	  for (int i = 1; i < s.length(); i++){
		if(s.charAt(i-1)!=s.charAt(i)){
			len2++;
		if(len<len2) {
			len=len2;
		}
		}else {
			len2=1;
		}
	  }
System.out.println(len);
}
}
}
